{
  "manifest_version": 3,
  "name": "AI Chat Extension",
  "version": "1.0",
  "description": "A Chrome extension for AI-powered chat with language detection, translation, and summarization.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "../../index.html",  
    "default_icon": {
      "16": "assets/icon.svg",
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "icons": {
    "16": "assets/icon.svg",
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  }
}